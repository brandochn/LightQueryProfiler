{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/LightQueryProfiler.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary",
      ],
      "problemMatcher": "$msCompile",
    },
    {
      "label": "test",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "${workspaceFolder}/tests/LightQueryProfiler.Shared.UnitTests/LightQueryProfiler.Shared.UnitTests.csproj",
      ],
      "problemMatcher": "$msCompile",
    },
    {
      "label": "clean-publish-winforms",
      "type": "shell",
      "command": "Remove-Item",
      "args": [
        "-Path",
        "C:\\light-query-profiler-win-x64",
        "-Recurse",
        "-Force",
        "-ErrorAction",
        "SilentlyContinue",
      ],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
      },
    },
    {
      "label": "publish-winforms",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/src/LightQueryProfiler.WinFormsApp/LightQueryProfiler.WinFormsApp.csproj",
        "-c",
        "Release",
        "-r",
        "win-x64",
        "--self-contained",
        "false",
        "-o",
        "C:\\light-query-profiler-win-x64",
      ],
      "problemMatcher": "$msCompile",
      "dependsOn": ["clean-publish-winforms"],
    },
  ],
}
